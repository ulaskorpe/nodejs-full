<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    
    <%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <%- include('../partials/categories') %>
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">
                    <%= title %>
                </h1>


                <% if (blogs.length >0) { %>
                    <% blogs.forEach(function(blog){ %>
                
                        <%- include("../partials/blog-card", blog )  %> 
                  

                    <% }) %>

                  

                    <% if (blogs.filter(b=>b.home).length >1) { %>
              
                      <%- include('../partials/pagination') %>
                        
                     
                    <% } %>

                    <% }else{ %>
                         <div class="alert alert-warning">NOT FOUND</div>
                    <% } %>

            
                <!-- pagination -->
                         

             
            </div>
        </div>
    </div>

</body>
</html>



