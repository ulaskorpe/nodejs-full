<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <div class="card card-body">
                    <form method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="roleid" value="<%= role.id %>">
                        <div class="row mb-3">
                            <label for="baslik" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="rolename" name="rolename" value="<%= role.rolename %>">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
              
                <table class="table table-bordered table-striped mt-3">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th style="width: 150px;">username</th>
                            <th>email</th>
                            <th style="width: 200px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td>#<%= user.id %> </td>
                                <td>
                                    <%= user.fullname %> 
                                </td>
                                <td>
                                    <%= user.email %> 
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/users/<%= user.id %>">edit</a>
                                    

                                    <a class="btn btn-sm btn-danger" href="#" onclick="confirmDelete('<%=role.id%>')" >DELETE</a>
                         

                                    <form style="display: none;" action="/admin/roles/remove" method="post" id="form<%=role.id%>">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="roleid" value="<%= role.id %>">
                                        <input type="hidden" name="userid" value="<%= user.id %>">
                                    
                                    </form>

                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
       
    <script>
  

        function confirmDelete(id){
         
            Swal.fire({
                title: 'user will be removed from role , Are you sure?',
                text: "",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
              }).then((result) => {
                if (result.isConfirmed) {
                  //  alert('form'+id);
                     document.getElementById('form'+id).submit();
                    //$('#form'+id).submit();
                }
              })
 
        }
    </script>
</body>
</html>



